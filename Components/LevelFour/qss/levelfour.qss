/* Basic Palette
border styles: dashed | dot-dash | dot-dot-dash | dotted | double | groove | inset | outset | ridge | solid | none
*/

/* Set the selection colors for all widgets. */
QWidget
{
	color: #cccccc;
	background-color: #484848;
	selection-color: #686868;
	selection-background-color: #2e2e2e;
}

QMainWindow
{
	background: #484848;
}

QMainWindow::separator
{
    background: #383838;
	border: 0px;	
    width: 3px; /* when vertical */
    height: 3px; /* when horizontal */
}

QMainWindow::separator:hover
{
	background: #333333;
	border-bottom: 1px solid #282828;
	border-right: 1px solid #282828;
	border-top: 1px solid #686868;
	border-left: 1px solid #686868;
}

/* Customize check boxes. */
QCheckBox {
    spacing: 5px;
}

QCheckBox::indicator {
    width: 13px;
    height: 13px;
}

QCheckBox::indicator:unchecked {
    image: url(:/MainWindow/images/checkbox_unchecked.png);
}

QCheckBox::indicator:unchecked:hover {
    image: url(:/MainWindow/images/checkbox_unchecked_hover.png);
}

QCheckBox::indicator:unchecked:pressed {
    image: url(:/MainWindow/images/checkbox_unchecked_pressed.png);
}

QCheckBox::indicator:checked {
    image: url(:/MainWindow/images/checkbox_checked.png);
}

QCheckBox::indicator:checked:hover {
    image: url(:/MainWindow/images/checkbox_checked_hover.png);
}

QCheckBox::indicator:checked:pressed {
    image: url(:/MainWindow/images/checkbox_checked_pressed.png);
}

/* Combobox */
QComboBox 
{
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	border-top-left-radius: 3px; /* same radius as the QComboBox */
	border-bottom-left-radius: 3px;
	padding: 1px 18px 1px 3px;
	min-width: 6em;
	color: #e5e5e5;
}

/* The popup */
QComboBox QAbstractItemView {
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	selection-background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #686f75, stop: 0.3 #848b91, stop: 1.0 #adafb5);
	selection-color: #000000;
}

QComboBox:editable
{
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
}

QComboBox:!editable, QComboBox::drop-down:editable
{
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
}

/* QComboBox gets the "on" state when the popup is open */
QComboBox:!editable:on, QComboBox::drop-down:editable:on
{
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);
}

QComboBox:on
{ 
	/* shift the text when the popup opens */
	padding-top: 3px;
	padding-left: 4px;
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);
}

/* Drop down button */
QComboBox::drop-down
{
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 15px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
}

QComboBox::down-arrow
{
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);
	width: 3px;
    height: 3px;
}

QComboBox::down-arrow:on
{
	/* shift the arrow when popup is open */
	top: 1px;
	left: 1px;
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);

}

QDockWidget
{
    border-bottom: 1px solid #282828;
	border-right: 1px solid #282828;
	border-top: 1px solid #686868;
	border-left: 1px solid #686868;
    border-radius: 5px;
    padding: 2px;
    margin: 2px;
}

QDockWidget::title
{
    background: #3e3e3e;
}

/* Header for ... */
QHeaderView::section
{
	color: #cccccc;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	padding-left: 4px;
	border-bottom: 1px solid #282828;
	border-right: 1px solid #282828;
	border-top: 1px solid #686868;
	border-left: 1px solid #686868;
	border-radius-top: 5px;
}

/* Text input box */
QLineEdit
{
	background: #6c6c6c;
	color: #ffffff;
	border: 1px solid #303030;
	border-radius: 0px;
	padding: 0 8px;
	selection-background-color: #606060;
	margin-left: 5px;
	margin-right: 5px;
}

QLabel
{
	margin-left: 5px;
	margin-right: 5px;
}

/* Drop down style */
QMenu
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	border: 1px solid #2e2e2e;
	color: #999999;
}

QMenu::item
{
	/* sets background of menu item. set this to something non-transparent
	if you want menu color and menu item color to be different */
	background-color: transparent;
}

QMenu::item:selected
{
	/* when user selects item using mouse or keyboard */
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
}

QMenuBar
{
	border-bottom: 1px solid #282828;
	border-right: 1px solid #282828;
	border-top: 1px solid #686868;
	border-left: 1px solid #686868;
	background: #383838;
}

QMenuBar::item
{
	spacing: 3px; /* spacing between menu bar items */
	padding: 1px 4px;
	background: transparent;
	color: #888888;
}

/* when selected using mouse or keyboard */

QMenuBar::item:selected
{
	border: 1px solid #000000;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
	border-radius: 5px;
}

QMenuBar::item:pressed
{
	border: 1px solid #000000;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
	border-radius: 5px;
}

QPushButton
{
	min-width: 80px;
	color: #cccccc;
	border: 1px solid #303030;
	background: #606060;
	border-radius: 5px;
}

/* all types of push button */
QPushButton:hover
{
	color: #cccccc;
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	border-radius: 5px;
}

QPushButton:pressed
{
	color: #000000;
	border: 1px solid #000000;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	border-radius: 5px;
}

