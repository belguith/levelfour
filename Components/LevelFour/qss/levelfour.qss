/* Customize arrows. */

*::down-arrow, *::menu-indicator {
    image: url(:/MainWindow/images/down_arrow.png);
    width: 7px;
    height: 7px;
}

*::down-arrow:disabled, *::down-arrow:off {
   image: url(:/MainWindow/images/down_arrow_disabled.png);
}

*::up-arrow {
    image: url(:/MainWindow/images/up_arrow.png);
    width: 7px;
    height: 7px;
}

*::up-arrow:disabled, *::up-arrow:off {
   image: url(:/MainWindow/images/up_arrow_disabled.png);
}


QScrollBar:horizontal
{
	background: #4d4d4d;
	max-height: 12px;
	min-height: 12px;
	margin: 0px 40px 0px 0px;
}

QScrollBar::handle:horizontal
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #969696, stop: 1.0 #7b7b7b);
	min-width: 30px;
	min-height: 8px;
	max-height: 8px;
	border: 1px solid #383838;
	border-radius: 5px;	
}

QScrollBar::add-line:horizontal
{
	background: #4d4d4d;
	width: 16px;
     	subcontrol-position: right;
     	subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
	background: #4d4d4d;	
	width: 16px;
     	subcontrol-position: top right;
     	subcontrol-origin: margin;
	position: absolute;
	right: 20px;
}

QScrollBar:left-arrow:horizontal
{
	background: #4d4d4d;	
	min-width: 5px;
	min-height: 5px;
	max-width: 5px;
	max-height: 5px;
}

QScrollBar::right-arrow:horizontal
{
	background: #4d4d4d;	
	min-width: 5px;
	min-height: 5px;
	max-width: 5px;
	max-height: 5px;
}

QScrollBar:vertical 
{
	background: #4d4d4d;
	max-width: 12px;
	min-width: 12px;
	margin: 40px 0px 0px 0px;
}

QScrollBar::handle:vertical
{
     	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #969696, stop: 1.0 #7b7b7b);
	min-width: 8px;
	max-width: 8px;
	min-height: 30px;
	border: 1px solid #383838;
	border-radius: 5px;
}

QScrollBar::add-line:vertical
{
     background: #4d4d4d;
     height: 16px;
     subcontrol-position: top;
     subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
     	background: #4d4d4d;
     	height: 16px;
     	subcontrol-position: top;
     	subcontrol-origin: margin;
	position: absolute;
	top: 20px;
}

QScrollBar:up-arrow:vertical
{
	background: #4d4d4d;	
	min-width: 5px;
	min-height: 5px;
	max-width: 5px;
	max-height: 5px;

}

QScrollBar::down-arrow:vertical
{
	background: #4d4d4d;	
	min-width: 5px;
	min-height: 5px;
	max-width: 5px;
	max-height: 5px;

}


QSlider::groove:vertical
{
	background: #333333;
	position: absolute; 
	left: 4px; right: 4px;
}

QSlider::handle:vertical
{
     height: 10px;
     background: #777777;
     margin: 0 -4px; /* expand outside the groove */
}

QSlider::add-page:vertical
{
     background: #686868;
}

QSlider::sub-page:vertical
{
     background: #686868;
}

QStatusBar
{
	background: #686868;
	border-top: 1px solid #939393;
	border-bottom: 1px solid #000000;
}


/* Table View */
QTableView
{
	selection-background-color: #a6a6a6;
	selection-color: #d2b450;
	padding-left: 5px;
	padding-right: 5px;
	color: #000000;
}

/* TreeView */
QTreeView::item 
{
	background: #727272;
	alternate-background-color: #787878;
}

QTreeView::item:hover
{
     	background: #8b8b8b;
}
QTreeView::item:selected
{
	background: #4f4f4f;
	color: #e5e5e5;}

QTreeView::item:selected:active
{
 	background: #4f4f4f;
	color: #e5e5e5;	
}

QTreeView::item:selected:!active
{
     background: #6b6b6b;
	color: #e5e5e5;}

QTreeView::branch:has-siblings:!adjoins-item {
     border-image: url(:/MainWindow/images/vline.png) 0;
 }

 QTreeView::branch:has-siblings:adjoins-item {
     border-image: url(:/MainWindow/images/branch-more.png) 0;
 }

 QTreeView::branch:!has-children:!has-siblings:adjoins-item {
     border-image: url(:/MainWindow/images/branch-end.png) 0;
 }

 QTreeView::branch:has-children:!has-siblings:closed,
 QTreeView::branch:closed:has-children:has-siblings {
         border-image: none;
         image: url(:/MainWindow/images/branch-closed.png);
 }

 QTreeView::branch:open:has-children:!has-siblings,
 QTreeView::branch:open:has-children:has-siblings  {
         border-image: none;
         image: url(:/MainWindow/images/branch-open.png);
 }

/* The tab widget frame */
QTabWidget::pane
{
	border: 1px solid #737373;
}

/* Style the tab using the tab sub-control. */
QTabBar::tab
{
	color: #cccccc;
	border-top: 1px solid #595959;
	border-left: 1px solid #595959;
	border-right: 1px solid #1a1a1a;
	border-bottom: 1px solid #737373;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #4c4c4c, stop: 1.0 #434343);
	padding: 4px;
	margin-left: 0px;
	margin-right: 0px;
	margin-top: 0px;
	margin-bottom: 0px;
	border-top-radius: 2px;
}

QTabBar::tab:hover
{
	color: #e5e5e5;
	border-top: 1px solid #595959;
	border-left: 1px solid #595959;
	border-right: 1px solid #1a1a1a;
	border-bottom: 1px solid #737373;
}

QTabBar::tab:selected {
	color: #e5e5e5;
	border-top: 1px solid #737373;
	border-left: 1px solid #737373;
	border-right: 1px solid #737373;
	border-bottom: 0px solid #737373;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #646464, stop: 1.0 #595959);


}

/* Style for main toolbar */
QToolBar
{
	border-top: 1px solid #939393;
	border-left: 1px solid #999999;
	border-right: 1px solid #666666;
	border-bottom: 1px solid #000000;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #717171, stop: 1.0 #5a5a5a);
	spacing: 3px; /* spacing between items in the tool bar */
	padding-top: 2px;
	padding-bottom: 2px;
	min-height: 25px;
}

/* All types of tool button */
QToolButton
{
	border: 1px solid #222222;
	background: none;
	border-radius: 5px;
	height: 20px;	
}

QToolButton[popupMode="1"]
{
	/* only for MenuButtonPopup */
	padding-right: 20px; /* make way for the popup button */
}

QToolButton::menu-button
{
     /* 16px width + 4px for border = 20px allocated above */
	width: 16px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #535353, stop: 1.0 #4c4c4c);
	border: 1px solid #222222;
}

QToolButton:hover
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #7f7f7f, stop: 1.0 #545454);
}

QToolButton:pressed
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #4670b2, stop: 1.0 #638dcf);
}

QToolTip
{
	border: 1px solid #555555;
	background: #222222;
	padding: 1px;
	border-radius: 5px;
	opacity: 200;
	color: #CCCCCC;
}
