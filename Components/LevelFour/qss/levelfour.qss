QScrollBar QAbstractScrollArea
{
	background: #4d4d4d;
}

QScrollBar:horizontal
{
	background: #4d4d4d;
	max-height: 12px;
	min-height: 12px;
	margin: 0px 22px 0px 22px;
}

QScrollBar::handle:horizontal
{
	border: 1px solid #303030;
	background: #606060;
	border-radius: 5px;
	min-width: 20px;
	max-width: 20px;
	min-height: 8px;
	max-height: 8px;
}

QScrollBar::add-line:horizontal
{
	background: #4d4d4d;
	width: 20px;
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
	background: #4d4d4d;	
	width: 20px;
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar:left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
     border: 1px solid #505050;
     width: 3px;
     height: 3px;
     background: #585858;
 }

 QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
     background: #4d4d4d;
 }

QScrollBar:vertical 
{
	background: #4d4d4d;
	max-width: 12px;
	min-width: 12px;
	margin: 22px 0px 22px 0px;
}

QScrollBar::handle:vertical
{
    border: 1px solid #303030;
	background: #606060;
	border-radius: 5px;
	min-width: 8px;
	max-width: 8px;
	min-height: 20px;
	max-height: 20px;
}

QScrollBar::add-line:vertical
{
     background: #4d4d4d;
     height: 20px;
     subcontrol-position: top;
     subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
    background: #4d4d4d;
    height: 20px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
      border: 1px solid #505050;
      width: 3px;
      height: 3px;
      background: #585858;
  }

  QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
      background: #4d4d4d;
  }

QSlider::groove:vertical
{
	background: #333333;
	position: absolute; 
	left: 4px; right: 4px;
}

QSlider::handle:vertical
{
     height: 10px;
     background: #ff7603;
     border: 1px solid #62340e;
     margin: 0 -4px; /* expand outside the groove */
}

QSlider::add-page:vertical
{
     background: #686868;
}

QSlider::sub-page:vertical
{
     background: #686868;
}

QStatusBar
{
	border-bottom: 1px solid #282828;
	border-right: 1px solid #282828;
	border-top: 1px solid #686868;
	border-left: 1px solid #686868;
	background: #383838;
}


/* Table View */
QTableView
{
	selection-background-color: #a6a6a6;
	selection-color: #d2b450;
	padding-left: 5px;
	padding-right: 5px;
	color: #000000;
}

/* TreeView */
QTreeView
{
	margin: 2px;
	border-top: 1px solid #282828;
	border-left: 1px solid #282828;
	border-bottom: 1px solid #686868;
	border-right: 1px solid #686868;
	border-radius: 0px;
	padding: 5px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);
	color: #cccccc;
	paint-alternating-row-colors-for-empty-area: 0;
}

QTreeView::item 
{
	background: #606060;
	alternate-background-color: #787878;
	color: #a1a1a1;
	border-bottom: 1px solid #4e4e4e;
	border-radius: 0px;
	padding-left: 15px;
}

QTreeView::item:hover
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
}
QTreeView::item:selected
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
}

QTreeView::item:selected:active
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
}

QTreeView::item:selected:!active
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	color: #000000;
}

QTreeView::branch:has-siblings:!adjoins-item {
     /* border-image: url(:/MainWindow/images/vline.png) 0; */
     border-image: none;
 }

 QTreeView::branch:has-siblings:adjoins-item {
     /* border-image: url(:/MainWindow/images/branch-more.png) 0; */
     border-image: none;
 }

 QTreeView::branch:!has-children:!has-siblings:adjoins-item {
     /* border-image: url(:/MainWindow/images/branch-end.png) 0; */
     border-image: none;
 }

 QTreeView::branch:has-children:!has-siblings:closed,
 QTreeView::branch:closed:has-children:has-siblings {
         /* border-image: none; */
         image: url(:/MainWindow/images/branch-closed.png);
 }

 QTreeView::branch:open:has-children:!has-siblings,
 QTreeView::branch:open:has-children:has-siblings  {
         border-image: none;
         image: url(:/MainWindow/images/branch-open.png);
 }

/* The tab widget frame */
QTabWidget::pane
{
	border-bottom: 1px solid #282828;
	border-right: 1px solid #282828;
	border-top: 1px solid #686868;
	border-left: 1px solid #686868;
	border-radius: 5px;
	margin: 2px;
	padding: 2px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #5f5f5f, stop: 1.0 #7f7f7f);

}

QTabWidget::tab-bar
{

}

/* Style the tab using the tab sub-control. */
QTabBar::tab
{
	color: #cccccc;
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	padding-left: 4px;
	padding-right: 4px;
	padding-top: 2px;
	padding-bottom: 2px;
	border-radius: 0px;
	margin-top: 3px;
	margin-bottom: 3px;
	margin-left: 6px;
}

QTabBar::tab:hover
{
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);
}

QTabBar::tab:selected
{
	color: #000000;
	border: 1px solid #303030;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
}

/* Style for main toolbar */
QToolBar
{
	border: 0px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	spacing: 3px; /* spacing between items in the tool bar */
	padding-top: 3px;
	padding-bottom: 3px;
	padding-left: 5px;
	margin-bottom: 1px;
	min-height: 30px;
}

QToolBar::handle {
     image: none;
 }

/* All types of tool button */
QToolButton
{
	border: 1px solid #393939;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	border-radius: 5px;
	height: 20px;	
}

QToolButton[popupMode="1"]
{
	/* only for MenuButtonPopup */
	padding-right: 20px; /* make way for the popup button */
}

QToolButton::menu-button
{
     /* 16px width + 4px for border = 20px allocated above */
	width: 16px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #383838, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #535353);
	border: 1px solid #393939;
}

QToolButton:hover
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #535353, stop: 0.2 #484848, stop: 0.8 #484848, stop: 1.0 #383838);
	border: 1px solid #393939;
}

QToolButton:pressed
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
		stop: 0 #f49c1c, stop: 0.3 #f27000, stop: 0.8 #e56a00, stop: 1.0 #9a4700);
	border: 1px solid #393939;
}

QToolTip
{
	border: 1px solid #ffffff;
	background: #333333;
	padding: 3px;
	border-radius: 5px;
	opacity: 150;
	color: #CCCCCC;
}
