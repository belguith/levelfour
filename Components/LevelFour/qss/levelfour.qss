QCheckBox::indicator:checked:pressed {
    image: url(:/MainWindow/images/checkbox_checked_pressed.png);
}

QComboBox QAbstractItemView {
     border: 2px solid darkgray;
     selection-background-color: lightgray;
}

/* Combobox */
QComboBox 
{
	border: 1px solid #393939;
	border-radius: 0px;
	padding: 1px 18px 1px 3px;
	min-width: 6em;
	color: #e5e5e5;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #6e6e6e, stop: 1.0 #4f4f4f);
}

QComboBox:editable
{
	background: #393939;
}

QComboBox:!editable, QComboBox::drop-down:editable
{
	color: #2b2b2b;
	background: #565656;
}

/* QComboBox gets the "on" state when the popup is open */
QComboBox:!editable:on, QComboBox::drop-down:editable:on
{
	color: #2b2b2b;
	background: #d9d9d9;
}

QComboBox:on
{ 
	/* shift the text when the popup opens */
	padding-top: 3px;
	padding-left: 4px;
}

QComboBox::drop-down
{
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 15px;
	border-left-width: 1px;
	border-left-color: darkgray;
	border-left-style: solid; /* just a single line */
	border-top-right-radius: 3px; /* same radius as the QComboBox */
	border-bottom-right-radius: 3px;
	background: #d9d9d9;
}

QComboBox::down-arrow
{
	color: #CCCCCC;
}

QComboBox::down-arrow:on
{
	/* shift the arrow when popup is open */
	top: 1px;
	left: 1px;
}

QDockWidget
{
     	border: 1px solid #000000;
	padding-left: 4px;
	/* titlebar-close-icon: url(:/MainWindow/images/branch_closed.png); */
     	/* titlebar-normal-icon: url(:/MainWindow/images/branch_open.png); */
}

QDockWidget::title
{
     	text-align: left; /* align the text to the left */
     	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #717171, stop: 1.0 #5b5b5b);
	border-top: 1px solid #939393;
	border-left: 1px solid #5b5b5b;
	border-right: 1px solid #5b5b5b;
