/* Drop down style */
QMenu
{
	background: #727272;
	border: 1px solid #5d5d5d;
	color: #000000;
}

QMenu::item
{
	/* sets background of menu item. set this to something non-transparent
	if you want menu color and menu item color to be different */
	background-color: transparent;
}

QMenu::item:selected
{
	/* when user selects item using mouse or keyboard */
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #404040, stop: 1.0 #4c4c4c);
	color: #e5e5e5;
}

QMenuBar
{
	/* border is not working */
	border-top: 1px solid #999999;
	border-left: 1px solid #999999;
	border-right: 1px solid #666666;
	border-bottom: 1px solid #000000;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #4c4c4c, stop: 1.0 #434343);
}

QMenuBar::item
{
	spacing: 3px; /* spacing between menu bar items */
	padding: 1px 4px;
	background: transparent;
}

/* when selected using mouse or keyboard */

QMenuBar::item:selected
{
	color: #e5e5e5;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #404040, stop: 1.0 #4c4c4c);
}

QMenuBar::item:pressed
{
	color: #e5e5e5;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #404040, stop: 1.0 #4c4c4c);
}

QPushButton
{
	border-radius: 6px;
	min-width: 80px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #7f7f7f, stop: 1.0 #545454);
	border-top: 1px solid #232323;
	border-left: 1px solid #232323;
	border-bottom: 1px solid #2b2b2b;
	border-right: 1px solid #2b2b2b;
}

/* all types of push button */
QPushButton:hover
{
	color: #e5e5e5;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #404040, stop: 1.0 #4c4c4c);
}

QPushButton:pressed
{
	color: #e5e5e5;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #404040, stop: 1.0 #4c4c4c);
}

