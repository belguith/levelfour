/*

% Texture-based remap of color space.  Color ramp textures can be
% easily generated by Photoshop and the PS "Curves" command.  The
% technique is described in "GPU Gems" in the section on color
% control.

*/

vertex_program ColorCurve_vs cg
{
	source vs_ColorCurve.cg
	profiles arbvp1
    entry_point ScreenQuadVS2
	
	default_params
    {
        
    }
}


fragment_program ColorCurve_ps cg
{
    source ps_ColorCurve.cg
    entry_point colorCurvePS
    profiles arbfp1

	default_params
	{
		param_named SceneSampler 		int 	0
		// param_named ColorCurveSampler 	int 	1
		param_named Fade 				float 	1.0
		
	}
}

material ColorCurve
{
	technique
	{
		pass
		{
			depth_check off

			vertex_program_ref ColorCurve_vs
			{
			
			}
			
			fragment_program_ref ColorCurve_ps
			{
			
			}	
			
			 texture_unit	// (scene)
			 {
                 // texture SceneSampler 2d
				 tex_coord_set 0
				 tex_address_mode clamp
				 filtering linear linear linear
			 }
			 
			 texture_unit	// (scene)
			 {
                 texture sample_color_curve.dds 2d
				 tex_coord_set 0
				 tex_address_mode clamp
				 filtering linear linear linear
			 }
			
		}
	}
}

