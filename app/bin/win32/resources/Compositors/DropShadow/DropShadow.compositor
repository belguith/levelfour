compositor DropShadowCompositor
{
    technique
    {
	
		texture BlurGlowBuffer_HorzMap target_width_scaled 0.125 target_height_scaled 0.125 PF_R8G8B8
		texture BlurGlowBuffer_VertMap target_width_scaled 0.125 target_height_scaled 0.125 PF_R8G8B8
		
        target BlurGlowBuffer_HorzMap
        {
            input none

            pass render_quad
            {
				identifier 0000
				material  BlurGlowBuffer_Horz
            }
        }
		
		target BlurGlowBuffer_VertMap
        {
            input none

            pass render_quad
            {
				identifier 0001
				material  BlurGlowBuffer_Vert
				input 0 BlurGlowBuffer_HorzMap
            }
        }
		
		
		target_output
        {
            input none

            pass render_quad
            {
				identifier 0002
				material  DropShadow
				input 0 BlurGlowBuffer_VertMap
            }
        }
    }

}
