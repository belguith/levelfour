    <parameter name="input2" type="Float" defaultValue="0.0" pin="in"/>
	<parameter name="input3" type="Float" defaultValue="0.0" pin="in"/>
    <parameter name="input4" type="Float" defaultValue="0.0" pin="in"/>
	<parameter name="output1" type="Float" defaultValue="0.0" pin="out"/>
    <parameter name="output2" type="Float" defaultValue="0.0" pin="out"/>
	<parameter name="output3" type="Float" defaultValue="0.0" pin="out"/>
    <parameter name="output4" type="Float" defaultValue="0.0" pin="out"/>
