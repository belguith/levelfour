<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="MaterialMapper" category="Mappers" color="40, 40, 40" plugin="materialMapper.dll">
  <parameters>
    <parameter name="Description" type="TextInfo" defaultValue="The closeness centrality of a vertex measures how easily other vertices 
 can be reached from it (or the other way: how easily it can be reached 
 from the other vertices)."/>
    <parameters name="Material Mapper Settings">
      <parameter name="Set Select Material" type="TextInfo" defaultValue="."/>
    </parameters>
    <!-- input parameters -->
    <parameter name="Table" type="VTKTable" pin="in" visible="false"/>
    <parameter name="MaterialIn" type="Image" pin="in" visible="false"/>
    <!-- output parameters -->
    <parameter name="MaterialOut" type="Image" pin="out" visible="false"/>
  </parameters>
</nodetype>
