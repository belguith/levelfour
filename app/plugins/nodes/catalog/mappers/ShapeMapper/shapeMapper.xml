<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="ShapeMapper" category="Mappers" color="40, 40, 40" plugin="shapeMapper.dll">
  <parameters>
    <parameters name="Shape By Value Parameters">
      <parameter name="Description" type="TextInfo" defaultValue="Shape by Value is..."/>
      <parameter name="Centroid Offset" type="Enumeration" defaultValue="Center">
        <literal name="Center"/>
        <literal name="Left"/>
        <literal name="Right"/>
        <literal name="Top"/>
        <literal name="Bottom"/>
      </parameter>
    </parameters>
    <!-- input parameters -->
    <parameter name="MeshIn" type="Geometry" pin="in" visible="false"/>
    <parameter name="ColorIn" type="Enumeration" pin="in" visible="false"/>
    <parameter name="MaterialIn" type="Enumeration" pin="in" visible="false"/>
    <parameter name="SizeIn" type="Enumeration" pin="in" visible="false"/>
    <!-- output parameters -->
    <parameter name="ShapeOut" type="Geometry" pin="out" visible="false"/>
  </parameters>
</nodetype>
