<nodetype name="PhylloTreeLayouter" category="Layouts" color="40, 40, 40" plugin="phylloTreeLayouter.dll">
  <parameters>
    <parameter name="Description" type="TextInfo" defaultValue="The use of nature’s phyllotactic patterns to inform 
the layout of hierarchical data. These naturally occurring patterns 
provide a non-overlapping, optimal packing when the total number 
of nodes is not known a priori. "/>
    <parameters name="Pyllo Tree Parameters">
      <parameter name="AngularConstant" type="TextInfo" defaultValue="Default is 137.5"/>
        <parameter name="SetAngularConstant" type="int" inputMethod="SliderPlusSpinBox" minValue="0" maxValue="360" defaultValue="360" stepSize="5" />
      </parameters>
    <!-- input parameters inline -->
    <!-- output parameters inline -->
  </parameters>
</nodetype>
