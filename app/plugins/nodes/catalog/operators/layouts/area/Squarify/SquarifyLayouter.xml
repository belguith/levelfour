<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="SquarifyLayouter" category="Area" color="40, 40, 40" plugin="SquarifyLayouter.dll">
  <parameters>
    <parameter name="Description" type="TextInfo" defaultValue="Layout that computes a circular balloon-tree layout of a tree. 
This layout places children nodes radially around their parents, 
and is equivalent to a top-down flattened view of a ConeTree."/>
    <parameter name="References" type="TextInfo" defaultValue="G. Melan on and I. Herman from their research paper 
Circular Drawings of Rooted Trees, 
Reports of the Centre for Mathematics and Computer Sciences, 
Report Number INS, 9817, 1998."/>
    <parameters name="Balloon Layouter Parameters">
      <parameter name="TextInfo" type="TextInfo"/>
    </parameters>
    <!-- input parameters -->
    <parameter name="Graph" type="Enumeration" pin="in" visible="false"/>
    <parameter name="Tree" type="Enumeration" pin="in" visible="false"/>
    <!-- output parameters -->
    <parameter name="Table" type="Enumeration" pin="out" visible="false"/>
  </parameters>
</nodetype>
