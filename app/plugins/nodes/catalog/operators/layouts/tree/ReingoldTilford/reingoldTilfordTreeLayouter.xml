<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="RTTreeLayouter" category="Layouts" color="40, 40, 40" plugin="reingoldTilfordTreeLayouter.dll">
  <parameters>
    <parameter name="Description" type="TextInfo" defaultValue="
A 2D Reingold-Tilford layout of a tree. 
Uses the Reingold-Tilford layout algorithm 
with modifications due to Walker, to lay 
out a tree in 2 dimensions."/>
    <parameter name="Reference" type="TextInfo" defaultValue="
Reingold, E and Tilford, J: 
Tidier drawing of trees. 
IEEE Trans. Softw. Eng., SE-7(2):223—228, 1981 
"/>
    <parameters name="Reingold Tilford Tree Layouter Parameters">
      <parameter name="Temp" type="TextInfo"/>
    </parameters>
    <!-- input parameters -->
    <parameter name="Tree" type="Enumeration" pin="in" visible="false"/>
    <!-- output parameters -->
    <parameter name="Table" type="Enumeration" pin="out" visible="false"/>
  </parameters>
</nodetype>
