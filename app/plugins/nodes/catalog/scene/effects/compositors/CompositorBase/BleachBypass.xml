<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="BleachBypass" category="Compositing" color="7, 45, 87" plugin="CompositorBase.dll">
  <parameters>
    <parameter name="Compositor Name" type="String" defaultValue="BleachBypassCompositor"/>
    <parameter name="Resource Location" type="String" defaultValue="resources/Compositors/BleachBypass/"/>
    <parameter name="Reload" type="Command"/>
    <parameters name="Input Maps">
      <parameter name="Input Map Scene" type="Image" pin="in" selfEvaluating="true"/>
    </parameters>
    <parameters name="Shader Parameters Pass 0">
      <parameter name="Opacity" type="Float" defaultValue="1.0" minValue="0.0" maxValue="1.0" stepSize="0.01"/>
    </parameters>
  </parameters>
</nodetype>



