<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="ScratchedFilm" category="Compositing" color="7, 45, 87" plugin="CompositorBase.dll">
  <parameters>
    <parameter name="Compositor Name" type="String" defaultValue="ScratchedFilmCompositor"/>
    <parameter name="Resource Location" type="String" defaultValue="resources/Compositors/ScratchedFilm/"/>
    <parameter name="Reload" type="Command"/>
    <parameters name="Input Maps">
      <parameter name="Input Map Scene" type="Image" pin="in" selfEvaluating="true"/>
    </parameters>
    <parameters name="Shader Parameters Pass 0">
      <parameter name="Speed1" type="Float" inputMethod="SliderPlusSpinBox" minValue="0.0" maxValue="100.0" defaultValue="0.03" unit=""/>
      <parameter name="Speed2" type="Float" inputMethod="SliderPlusSpinBox" minValue="0.0" maxValue="100.0" defaultValue="0.01" unit=""/>
      <parameter name="ScratchIntensity" type="Float" inputMethod="SliderPlusSpinBox" minValue="0.0" maxValue="100.0" defaultValue="0.65" unit=""/>
      <parameter name="IS" type="Float" inputMethod="SliderPlusSpinBox" minValue="0.0" maxValue="100.0" defaultValue="0.01" unit=""/>
    </parameters>
  </parameters>
</nodetype>

