<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="Light" category="-- Light" color="255, 255, 109" plugin="light.dll">
  <parameters>
    <parameters name="Transformation">
      <parameter name="Position" type="Float" size="3" inputMethod="SliderPlusSpinBox" minValue="-100" maxValue="100" defaultValue="0, 0, 0" stepSize="0.25"/>
      <parameter name="Orientation" type="Float" size="3" inputMethod="SliderPlusSpinBox" minValue="-360" maxValue="360" defaultValue="0, 0, 0"/>
    </parameters>
    <parameter name="Light Type" type="Enumeration" defaultValue="Point Light">
      <literal name="Point Light"/>
      <literal name="Directional Light"/>
	  <literal name="Spot Light"/>
    </parameter>
    <parameter name="Diffuse Color" type="Color" defaultValue="1.0, 1.0, 1.0"/>
	<parameter name="Specular Color" type="Color" defaultValue="1.0, 1.0, 1.0"/>
    <parameter name="Casts Shadows" type="Bool" defaultValue="true"/>
    <parameter name="Inner Angle" type="Float" defaultValue="0.0"/>
    <parameter name="Outer Angle" type="Float" defaultValue="100.0"/>
    <parameter name="Light" type="Light" pin="out"/>
  </parameters>
</nodetype>
