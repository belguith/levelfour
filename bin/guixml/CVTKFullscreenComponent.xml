<component name="CVTKFullscreenComponent" >
    <object title="" name="controller" />
    
    <action title="Fullscreen" 
            triggerSlot="CVTKFullscreenComponent.controller::showCurrentRenderWindowFullScreen()" 
            name="viewFullscreen" 
            shortcut="F11"/>

    <menu mergeWith="MainWindowComponent.viewMenu" >
        <menuitem />
        <menuitem actionName="CVTKFullscreenComponent.viewFullscreen" colSpan="2" rowSpan="2" 
                  hideWhenInactive="false"/>
        <menuitem />
    </menu>

    <toolbar mergeWith="MainWindowComponent.viewTools" >
        <toolbaritem actionName="CVTKFullscreenComponent.viewFullscreen" colSpan="2" rowSpan="2"
                  hideWhenInactive="true"/>
    </toolbar>

</component>
