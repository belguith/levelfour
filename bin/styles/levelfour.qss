/* Basic Palette
background: #404040 / 64, 64, 64
color: #c8c8c8 / 200, 200, 200
tab not selected: #3c3c3c / 606060
tab not selected border: #5d5d5d / 939393
tab not selected color: #8c8c8c / 140, 140, 140
tab selected: #535353 and #4f4f4f / 
tab selected color: #c8c8c8 / 200, 200, 200
tab selected left border: #edd976
tab selected top border: #d2b450
tab selected bottom border: #474747
highlight yellow: #d2b450 / 210, 180, 80
frame: top/left - #303030, right/bottom - #787878
header: #434343 / 66, 66, 66 or #202020 / 32, 32, 32
push button: #565656 / 86, 86, 86
border: top/left (#818181) right/bottom (#2b2b2b)
button color: #2b2b2b
*/

/* Set the selection colors for all widgets. */
QWidget
{
	color: #aaaaaa;
	background-color: #404040;
	selection-color: #606060;
	selection-background-color: #d2b450;
}

QMainWindow::separator
{
     background: #333333;
     width: 5px; /* when vertical */
     height: 5px; /* when horizontal */
}

QMainWindow::separator:hover
{
     background: #303030;
}

/* Combobox */
QComboBox 
{
	border: 1px solid #393939;
	border-radius: 1px;
	padding: 1px 18px 1px 3px;
	min-width: 6em;
	color: #2b2b2b;
	background: #565656;
}

QComboBox:editable
{
	background: #393939;
}

QComboBox:!editable, QComboBox::drop-down:editable
{
	color: #2b2b2b;
	background: #565656;
}

/* QComboBox gets the "on" state when the popup is open */
QComboBox:!editable:on, QComboBox::drop-down:editable:on
{
	color: #2b2b2b;
	background: #565656;
}

QComboBox:on
{ 
	/* shift the text when the popup opens */
	padding-top: 3px;
	padding-left: 4px;
}

QComboBox::drop-down
{
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 15px;
	border-left-width: 1px;
	border-left-color: darkgray;
	border-left-style: solid; /* just a single line */
	border-top-right-radius: 3px; /* same radius as the QComboBox */
	border-bottom-right-radius: 3px;
}

QComboBox::down-arrow
{
	color: #CCCCCC;
}

QComboBox::down-arrow:on
{
	/* shift the arrow when popup is open */
	top: 1px;
	left: 1px;
}

QDockWidget
{
     	border-top: 1px solid #303030;
	border-left: 1px solid #303030;
	border-bottom: 1px solid #787878;
	border-right: 1px solid #787878;

     /* titlebar-close-icon: url(close.png); */
     /* titlebar-normal-icon: url(undock.png); */
}

QDockWidget::title
{
     	text-align: left; /* align the text to the left */
     	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #535353, stop: 1.0 #4f4f4f);
	padding-left: 5px;
}

QDockWidget::close-button, QDockWidget::float-button
{
     border: 1px solid transparent;
     background: darkgray;
     padding: 0px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover
{
     background: gray;
}

QDockWidget::close-button:pressed, QDockWidget::float-button:pressed
{
     padding: 1px -1px -1px 1px;
}

/* Header for ... */
QHeaderView::section
{
	color: #8c8c8c;
	background: #565656;
	padding-left: 4px;
	border: 1px solid #303030;
}

/* style the sort indicator */
QHeaderView::down-arrow
{
	image: url(down_arrow.png);
}

QHeaderView::up-arrow
{
	image: url(up_arrow.png);
}

/* Text input box */
QLineEdit
{
	color: #c8c8c8;
	background: #565656;
	border-top: 1px solid #2b2b2b;
	border-left: 1px solid #2b2b2b;
	border-bottom: 1px solid #818181;
	border-right: 1px solid #818181;
	border-radius: 0px;
	padding: 0 8px;
	selection-background-color: #606060;
}

QMenu
{
	background-color: #404040; /* sets background of the menu */
	border: 1px solid #5d5d5d;
}

QMenu::item
{
	/* sets background of menu item. set this to something non-transparent
	if you want menu color and menu item color to be different */
	background-color: transparent;
}

QMenu::item:selected
{
	/* when user selects item using mouse or keyboard */
	background-color: #606060;
	color: #e5e5e5;
}

QMenuBar
{
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #434343, stop: 0.6 #333333,
	stop: 0.6 #333333, stop: 1.0 #2a2a2a);
	color: #aaaaaa;
	border: 0px;
}

QMenuBar::item
{
	spacing: 3px; /* spacing between menu bar items */
	padding: 1px 4px;
	background: transparent;
	border-radius: 4px;
}

/* when selected using mouse or keyboard */

QMenuBar::item:selected
{
	background: #606060;
}

QMenuBar::item:pressed
{
	background: #606060;
}

QPushButton
{
	border-radius: 6px;
	min-width: 80px;
	color: #8c8c8c;
	background: #565656;
	border-top: 1px solid #818181;
	border-left: 1px solid #818181;
	border-bottom: 1px solid #2b2b2b;
	border-right: 1px solid #2b2b2b;
}

/* all types of push button */
QPushButton:hover
{
	color: #e5e5e5;
	background: #505050;
}

QPushButton:pressed
{
	color: #777777;
	background: #505050;
}

QScrollBar:horizontal
{
     border: 1px #222222;
     background: #404040;
     height: 10px;
     margin: 0px 20px 0 20px;
}

QScrollBar::handle:horizontal
{
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #606060, stop: 1 #565656);
	min-width: 20px;
}

QScrollBar::add-line:horizontal
{
     border: 0px solid grey;
     background: #404040;
     width: 20px;
     subcontrol-position: right;
     subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal
{
     border: 0px #222222;
     background: #404040;
     width: 20px;
     subcontrol-position: left;
     subcontrol-origin: margin;
}

QScrollBar:left-arrow:horizontal, QScrollBar::right-arrow:horizontal
{
     border: 1px;
     width: 5px;
     height: 5px;
     background: #606060;
}

QScrollBar:vertical 
{
	border: 1px #222222;
	background: #404040;
	width: 10px;
	margin: 20px 0 20px 0;
}

QScrollBar::handle:vertical
{
     	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #606060, stop: 1 #565656);
	min-height: 20px;
}

QScrollBar::add-line:vertical
{
     border: 0px solid #222222;
     background: #404040;
     height: 20px;
     subcontrol-position: top;
     subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
     border: 0px #222222;
     background: #404040;
     height: 20px;
     subcontrol-position: bottom;
     subcontrol-origin: margin;
}

QScrollBar:up-arrow:vertical, QScrollBar::down-arrow:vertical
{
     border: 1px;
     width: 5px;
     height: 5px;
     background: #606060;
}

QSlider::groove:vertical
{
	background: #333333;
	position: absolute; 
	left: 4px; right: 4px;
}

QSlider::handle:vertical
{
     height: 10px;
     background: #777777;
     margin: 0 -4px; /* expand outside the groove */
}

QSlider::add-page:vertical
{
     background: #686868;
}

QSlider::sub-page:vertical
{
     background: #686868;
}

/* Table View */
QTableView
{
	selection-background-color: #565656;
	selection-color: #d2b450;
}

/* TreeView */
QTreeView::item 
{
	background: #606060;
}

QTreeView::item:hover
{
     background: #505050;
}

QTreeView::item:selected
{
	background: #505050;
	color: #d2b450;
}

QTreeView::item:selected:active
{
 	background: #505050;
}

QTreeView::item:selected:!active
{
     background: #505050;
}

/* The tab widget frame */
QTabWidget::pane
{
	border: 1px solid #474747;
}

/* Style the tab using the tab sub-control. */
QTabBar::tab
{
	color: #8c8c8c;
	background: #3c3c3c;
	border: 1px solid #5d5d5d;
	border-top-left-radius: 6px;
	border-top-right-radius: 6px;
	padding: 4px;
	margin-left: 2px;
	margin-right: 2px;
	margin-top: 2px;
	margin-bottom: 0px;
}

QTabBar::tab:hover
{
	color: #c8c8c8;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #535353, stop: 1.0 #4f4f4f);
	border: 1px solid #474747;
	border-top: 1px solid #d2b450;
	border-left: 1px solid #edd976;
	border-bottom-color: #474747; /* #535353 and #4f4f4f */
}

QTabBar::tab:selected {
	color: #c8c8c8;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
	stop: 0 #535353, stop: 1.0 #4f4f4f);
	border: 1px solid #474747;
	border-top: 1px solid #d2b450;
	border-left: 1px solid #edd976;
	border-bottom-color: #474747; /* #535353 and #4f4f4f */
}

/* Style for main toolbar */
QToolBar
{
	border: 1px solid #393939;
	background: #404040;
	spacing: 3px; /* spacing between items in the tool bar */
	padding-top: 2px;
	padding-bottom: 2px;
	min-height: 21px;
}

/* All types of tool button */
QToolButton
{
	border-top: 1px solid #818181;
	border-left: 1px solid #818181;
	border-bottom: 1px solid #2b2b2b;
	border-right: 1px solid #2b2b2b;
	border-radius: 5px;
	background: #565656;
	width: 17px;
	height: 17px;	
}

QToolButton[popupMode="1"]
{
	/* only for MenuButtonPopup */
	padding-right: 20px; /* make way for the popup button */
}

QToolButton::menu-button
{
     border: 1px solid gray;
     border-top-right-radius: 6px;
     /* 16px width + 4px for border = 20px allocated above */
     width: 16px;
 }

QToolButton:hover
{
	background: #565656;
	border: 1px solid #d2b450;
}

QToolButton:pressed
{
	background: #565656;
}

QToolTip
{
	border: 1px solid #555555;
	background: #222222;
	padding: 1px;
	border-radius: 5px;
	opacity: 200;
	color: #CCCCCC;
}
