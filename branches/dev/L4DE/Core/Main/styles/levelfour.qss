/* Basic Palette
Base background - #7a7a7a
Panel header - #525252
Button and controls - gradient light #4a4a4a to dark #393939
Frame - #676767
text input - #a1a1a1
light background - #898989
*/

/* Customize any plain widget that is a child of a QMainWindow. */
QMainWindow > .QWidget {
	background-color: #7a7a7a;
}

/* Set the selection colors for all widgets. */
QWidget {
	selection-color: #CCCCCC;
	selection-background-color: #393939;
	color: black;
	background-color: #7a7a7a;
}

/* Combobox */
QComboBox {
	border: 1px solid #393939;
	border-radius: 3px;
	padding: 1px 18px 1px 3px;
	min-width: 6em;
 }

 QComboBox:editable {
 	background: #393939;
 }

 QComboBox:!editable, QComboBox::drop-down:editable {
 	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                  stop: 0 #4a4a4a, stop: 0.4 #393939,
                                  stop: 0.5 #393939, stop: 1.0 #4a4a4a);
 }

 /* QComboBox gets the "on" state when the popup is open */
 QComboBox:!editable:on, QComboBox::drop-down:editable:on {
     	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                     stop: 0 #4a4a4a, stop: 0.4 #393939,
                                     stop: 0.5 #393939, stop: 1.0 #4a4a4a);
 }

 QComboBox:on { /* shift the text when the popup opens */
     padding-top: 3px;
     padding-left: 4px;
 }

 QComboBox::drop-down {
     subcontrol-origin: padding;
     subcontrol-position: top right;
     width: 15px;
     border-left-width: 1px;
     border-left-color: darkgray;
     border-left-style: solid; /* just a single line */
     border-top-right-radius: 3px; /* same radius as the QComboBox */
     border-bottom-right-radius: 3px;
	}

 QComboBox::down-arrow {
     color: #CCCCCC;
 	}

 QComboBox::down-arrow:on { /* shift the arrow when popup is open */
     top: 1px;
     left: 1px;
 	}

QFrame {
	padding: 2px;
 	}

QHeaderView::section {
	background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                       stop:0 #616161, stop: 0.5 #505050,
                                       stop: 0.6 #434343, stop:1 #656565);
	color: white;
	padding-left: 4px;
 	border: 1px solid #6c6c6c;
 }

 /* style the sort indicator */
 QHeaderView::down-arrow {
     image: url(down_arrow.png);
 }

 QHeaderView::up-arrow {
     image: url(up_arrow.png);
 }

/* Text input box */
QLineEdit {
 	border: 1px solid #393939;
	border-radius: 5px;
 	padding: 0 8px;
	selection-background-color: darkgray;
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                           stop: 0 #a1a1a1, stop: 1 #898989);
 }

QMenu {
     background-color: #676767; /* sets background of the menu */
     border: 1px solid black;
 }

QMenu::item {
     /* sets background of menu item. set this to something non-transparent
         if you want menu color and menu item color to be different */
	background-color: transparent;
 }

QMenu::item:selected { /* when user selects item using mouse or keyboard */
	background-color: #654321;
 }

QMenuBar {
	
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                  stop: 0 #4a4a4a, stop: 0.4 #393939,
                                  stop: 0.5 #393939, stop: 1.0 #4a4a4a);
	color: #CCCCCC;
 }

 QMenuBar::item {
     spacing: 3px; /* spacing between menu bar items */
     padding: 1px 4px;
     background: transparent;
     border-radius: 4px;
 }

/* when selected using mouse or keyboard */
QMenuBar::item:selected { 
	background: #a8a8a8;
 }

QMenuBar::item:pressed {
     background: #888888;
 }

/* all types of tool button */
QToolButton { 
         border: 0px solid #393939;
         border-radius: 1px;
         background: #525252;
}

QToolButton[popupMode="1"] { /* only for MenuButtonPopup */
         padding-right: 20px; /* make way for the popup button */
}

QToolButton:pressed {
         background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                           stop: 0 #4a4a4a, stop: 1 #393939);
}

QPushButton {
	border: 2px solid #393939;
	border-radius: 6px;
	min-width: 80px;
	color: #CCCCCC;
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                           stop: 0 #4a4a4a, stop: 1 #393939);
}

/* all types of push button */
QPushButton:pressed {
         background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                           stop: 0 #dadbde, stop: 1 #f6f7fa);
     }

QStatusBar {
	background-color: #393939;
}

/* The tab widget frame */
QTabWidget::pane { 
	border-top: 1px solid #7a7a7a;
}

/* Style the tab using the tab sub-control. */
QTabBar::tab {
 	background: #898989;
 	border: 1px solid #393939;
 	border-bottom-color: #525252; /* same as the pane color */
 	border-top-left-radius: 3px;
 	border-top-right-radius: 3px;
	padding: 4px;
	margin-left: 2px;
	margin-right: 2px;
margin-top: 2px;
margin-bottom: 2px;

}

QTabBar::tab:hover {
	background: #525252;
	border: 1px solid #393939;
      border-bottom-color: #525252;
}

QTabBar::tab:selected {
	background: #676767;
      border: 1px solid #393939;
	border-top: 3px solid #525252;   
	border-bottom-color: #525252; /* same as pane color */
}

QTableWidget {
         selection-background-color: qlineargradient(x1: 0, y1: 0, x2: 0.5, y2: 0.5,
                                     stop: 0 #FF92BB, stop: 1 white);
     }

QToolBar {
	background: #525252;
	spacing: 0px; /* spacing between items in the tool bar */
}

QToolBar::handle {
         image: url(handle.png);
}

QToolTip {
	border: 2px solid #7a7a7a;
	background: #393939;
	padding: 5px;
	border-radius: 5px;
	opacity: 200;
	color: #CCCCCC;
}

