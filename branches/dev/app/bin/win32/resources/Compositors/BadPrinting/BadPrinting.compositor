compositor "BadPrintingCompositor"
{
    technique
    {
		texture BPConvert target_width_scaled 0.125 target_height_scaled 0.125 PF_R8G8B8
				
		target BPConvert
        {
            input previous
            
            pass render_quad
            {
				identifier 0000
				material BadPrinting_Convert
            }
        }

        target_output
        {
            input none

            pass render_quad
            {
				identifier 0001
				material BadPrinting_Split
                input 0 BPConvert
            }
        }

    }

}

