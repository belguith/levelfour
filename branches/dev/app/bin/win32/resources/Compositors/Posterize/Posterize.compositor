/*

% Reduce color space - each RGB channel will be reduced to no more
% than "nColors" tones

*/

compositor PosterizeCompositor
{
    technique
    {
		texture SceneSampler target_width_scaled 0.125 target_height_scaled 0.125 PF_A8R8G8B8
		
		// Initial Pass
		target SceneSampler
		{
			input previous
		}
		
        target_output
        {
            input none

            pass render_quad
            {
				identifier 0000
				material  Posterize
				input 0 SceneSampler
            }
        }
    }

}
