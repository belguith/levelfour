<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="SimpleBlend" category="Rendering" color="7, 45, 87" plugin="simpleblend.dll">
  <parameters>
    <parameter name="Resource Group Name" type="String" defaultValue="SimpleBlendNode"/>
    <parameter name="Reload" type="Command"/>    
    <parameter name="Input Map One" type="Image" pin="in" selfEvaluating="true"/>
    <parameter name="Input Map Two" type="Image" pin="in" selfEvaluating="true"/>
      <parameter name="Operator" type="Enumeration" defaultValue="Add">
        <literal name="Add" value="Add"/>
        <literal name="Mul" value="Mul"/>
		<literal name="A over B" value="A over B"/>
      </parameter>
	  <parameter name="Linear Blend Factor" type="Float" minValue="0.0" maxValue="100.0" defaultValue="50.0" inputMethod="SliderPlusSpinBox" stepSize="1.0" unit=""/>
  </parameters>
</nodetype>


