<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="PositionByValue" category="Mappers" color="40, 40, 40" plugin="positionByValue.dll">
  <parameters>
    <parameters name="Closeness Centrality Settings">
      <parameter name="Description" type="TextInfo" defaultValue="Position By Value is ..."/>
      <parameter name="SetCoordinateSystem" type="Enumeration" defaultValue="Cartesian2d">
        <literal name="Cartesian2d"/>
        <literal name="Polar"/>
        <literal name="Cartesian3d"/>
        <literal name="Spherical"/>
        <literal name="Cyclindrical"/>
      </parameter>
      <parameter name="ScaleX" type="Enumeration" defaultValue="Linear">
        <literal name="Linear"/>
        <literal name="Log"/>
        <literal name="Ordinal"/>
        <literal name="Quantile"/>
        <literal name="Time"/>
      </parameter>
      <parameter name="ScaleY" type="Enumeration" defaultValue="Linear">
        <literal name="Linear"/>
        <literal name="Log"/>
        <literal name="Ordinal"/>
        <literal name="Quantile"/>
        <literal name="Time"/>
      </parameter>
      <parameter name="ScaleZ" type="Enumeration" defaultValue="Linear">
        <literal name="Linear"/>
        <literal name="Log"/>
        <literal name="Ordinal"/>
        <literal name="Quantile"/>
        <literal name="Time"/>
      </parameter>
      <parameter name="SetProjection" type="Enumeration" defaultValue="Miller">
        <literal name="Miller"/>
        <literal name="..."/>
        <literal name="..."/>
        <literal name="..."/>
        <literal name="..."/>
      </parameter>
    </parameters>
    <!-- input parameters -->
    <parameter name="idIn" type="Enumeration" pin="in" visible="false"/>
    <parameter name="Xin" type="Enumeration" pin="in" visible="false"/>
    <parameter name="Yin" type="Enumeration" pin="in" visible="false"/>
    <parameter name="Zin" type="Enumeration" pin="in" visible="false"/>
    <parameter name="Shape" type="Enumeration" pin="in" visible="false"/>
    <!-- output parameters -->
    <parameter name="Scene" type="Enumeration" pin="out" visible="false"/>
  </parameters>
</nodetype>
