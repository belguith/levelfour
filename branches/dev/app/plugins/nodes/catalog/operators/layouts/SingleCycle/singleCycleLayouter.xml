<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="Single-Cycle Layouter" category="Layouts" color="40, 40, 40" plugin="singleCycleLayouter.dll">
  <parameters>
    <parameters name="Single-Cycle Layouter Parameters">
      <parameter name="Description" type="TextInfo" defaultValue="Single Cycle Layouter places vertices around a circle."/>
      <parameter name="AddLinkVertex" type="enumeration" />
      <parameter name="AddLinkEdge" type="enumeration" />
      <parameter name="AngularRadius" type="int" inputMethod="SliderPlusSpinBox" minValue="0" maxValue="360" defaultValue="360" stepSize="10"/>
    </parameters>
    <!-- input parameters -->
    <parameter name="VertexTable" type="Enumeration" pin="in" visible="false"/>
    <parameter name="EdgeTable" type="Enumeration" pin="in" visible="false"/>
    <parameter name="GraphTree" type="Enumeration" pin="in" visible="false"/>
    <!-- output parameters -->
    <parameter name="Table" type="Enumeration" pin="out" visible="false"/>
    <parameter name="Graph" type="Enumeration" pin="out" visible="false"/>
  </parameters>
</nodetype>
