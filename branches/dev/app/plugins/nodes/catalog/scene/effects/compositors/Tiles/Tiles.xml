<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="Tiles" category="Compositors" color="7, 45, 87" plugin="Tiles.dll">
  <parameters>
    <parameter name="Input Map" type="Image" pin="in" selfEvaluating="true"/>
    <parameter name="Resource Group Name" type="String" defaultValue="Tiles" visible="false"/>
    <parameter name="Reload" type="Command" />
    <parameter name="NumTiles" type="Float" inputMethod="SliderPlusSpinBox" minValue="1.0" maxValue="100.0" defaultValue="8.0" unit=""/>
    <parameter name="Threshhold" type="Float" inputMethod="SliderPlusSpinBox" minValue="0.0" maxValue="2.0" defaultValue="0.15" unit=""/>
    
  </parameters>
</nodetype>

