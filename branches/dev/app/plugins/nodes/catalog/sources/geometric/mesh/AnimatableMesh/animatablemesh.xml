<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="AnimatableMesh" category="Geometric" color="120,70,150" plugin="animatablemesh.dll">
  <parameters>
    <parameter name="Geometry File" type="Filename" filter="Geometry Files (*.mesh)"/>
    <parameter name="Number of Vertices" type="TextInfo"/>
    <parameter name="Number of Triangles" type="TextInfo"/>
    <!--<parameter name="ready" type="Bool" defaultValue="false" pin="in" visible="false"/>-->
    <parameter name="time" type="Int" defaultValue="0" visible="false"/>
    <!--parameter name="Casts Shadows" type="Bool" defaultValue="true"/>
    <parameter name="Receives Shadows" type="Bool" defaultValue="false"/>
    <parameter name="Units" type="Enumeration" defaultValue="mm">
      <literal name="km"/>
      <literal name="cm"/>
      <literal name="mm"/>
      <literal name="nm"/>
    </parameter-->
    <parameter name="Light Description File" type="Filename" filter="Light Description Files (*.txt)"/>
    <parameter name="mult" type="Float" defaultValue="1.0" maxValue="100000.0"/>
    <parameter name="manual" type="Bool" defaultValue="false"/>
    <parameter name="autoPose" type="Bool" defaultValue="true"/>
  </parameters>
</nodetype>
