<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="AnimationClip" category="Animation" color="250,100,50" plugin="animationclip.dll">
  <parameters>
    <parameter name="Animation Clip File" type="Filename" filter="Animation Files (*.anim)"/>
    <parameter name="length" type="Float" defaultValue="1.0" minValue="0.0" maxValue="100.0"/>
    <parameter name="start" type="Float" defaultValue="1.0" minValue="0.0" maxValue="100.0"/>
    <parameter name="externallyControlled" type="Bool" defaultValue="false"/>
    <parameter name="splineAnimation" type="Bool" defaultValue="true"/>
    <parameter name="play" type="Bool" defaultValue="false" multiplicity="1" pin="in"/>
    <parameter name="loop" type="Bool" defaultValue="false" multiplicity="1" pin="in"/>
    <parameter name="weight" type="Float" defaultValue="1.0" multiplicity="1" pin="in"/>
    <parameter name="scale" type="Float" defaultValue="1.0" multiplicity="1" pin="in"/>
    <parameter name="time" type="Int" defaultValue="0" multiplicity="1" pin="in"/>
    <!--<parameter name="ready" type="Bool" defaultValue="false" multiplicity="1" pin="out"/>-->
    <parameter name="isPlaying" type="Bool" defaultValue="false" pin="out"/>
  </parameters>
</nodetype>
