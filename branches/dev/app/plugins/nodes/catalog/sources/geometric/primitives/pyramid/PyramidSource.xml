<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="Pyramid" category="Primitives" color="40, 40, 40" plugin="PyramidSource.dll">
  <parameters>
    <parameters name="Pyramid Parameters">
      <parameter name="Translate" type="Float" size="3" inputMethod="SliderPlusSpinBox" minValue="-100" maxValue="100" stepSize="0.05"/>
      <parameter name="Rotate" type="Float" size="3" inputMethod="SliderPlusSpinBox" minValue="-360" maxValue="360" stepSize="0.01"/>
      <parameter name="Scale" type="Float" size="3" inputMethod="SliderPlusSpinBox" minValue="-10" maxValue="10" stepSize="0.01" defaultValue="1, 1, 1"/>
    </parameters>
    <!-- input parameters -->
    <!-- output parameters -->
    <parameter name="Primitive" type="Geometry" pin="out" visible="false"/>
  </parameters>
</nodetype>
